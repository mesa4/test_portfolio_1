html(lang='en')
	head
		meta(charset='UTF-8')
		meta(name='viewport', content='width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0')
		meta(http-equiv='X-UA-Compatible', content='ie=edge')
		//link(rel='stylesheet', href='reset.css')
		link(rel='stylesheet', href='style.css')
		title Document
	body
		// Header
		header.header
			.header__triangle-left
			.header__triangle-right
			.header__top
				.wrapper.header__top__container
					.header__top__container__left
						a(href="").header__top__container__left--image.svg
							svg: use(xlink:href="images/sprite.svg#logo")
					.header__top__container__right
						.header__top__container__right__phone
							.header__top__container__right__phone--item
								a(href="")
									span (044)
									| 345-23-23
							.header__top__container__right__phone--item
								a(href="")
									span (050)
									| 925-55-22
						.header__top__container__right__call-back
							a(href="")
								span заказать звонок
			.header__bottom
				.wrapper.header__bottom__container
					.header__bottom__container__left
						h1 работа <br> в ереване
						p Гарантия оплаты труда <br> Уже трудоустроили <br> более 200 человек
						.header__bottom__container__left__consult
							a(href="#").header__bottom__container__left__consult--left
								span получить консультацию
							.header__bottom__container__left__consult--right
								span или
								.svg
									svg: use(xlink:href="images/sprite.svg#header-arrow")
							a(href="#").header__bottom__container__left__consult--send-cv отправить своё резюме
					.header__bottom__container__right
						ul.header__bottom__container__right__about
							li.header__bottom__container__right__about__item.item-1
								.header__bottom__container__right__about__item--left 37 надежных <br> работодателей
									span
								.header__bottom__container__right__about__item--right.active УеЗЖАЯ ОТ НАС <br> ВЫ ГАРАНТИРОВАНО <br> ЗАРАБАТЫВАЕТЕ

							li.header__bottom__container__right__about__item.item-2
								.header__bottom__container__right__about__item--left Открыто <br> 43 вакансий
									span обновление каждую <br> неделю
								.header__bottom__container__right__about__item--right УеЗЖАЯ ОТ НАС <br> ВЫ ГАРАНТИРОВАНО <br> ЗАРАБАТЫВАЕТЕ

							li.header__bottom__container__right__about__item.item-3
								.header__bottom__container__right__about__item--left Зароботная <br> плата $1200-2000
									span Мы называем только <br> реальные зарплаты
								.header__bottom__container__right__about__item--right УеЗЖАЯ ОТ НАС <br> ВЫ ГАРАНТИРОВАНО <br> ЗАРАБАТЫВАЕТЕ

							li.header__bottom__container__right__about__item.item-4
								.header__bottom__container__right__about__item--left Комфортные условия <br> проживания
									span (бесплатно или за <br> доступную цену)
								.header__bottom__container__right__about__item--right УеЗЖАЯ ОТ НАС <br> ВЫ ГАРАНТИРОВАНО <br> ЗАРАБАТЫВАЕТЕ
		// Section professions
		.section.professions
			.wrapper
				h2
					| Работа есть всегда
					br
					span для многих профессий

				p.professions__enumeration В таких городах:
					span

				- var values = {0:['сиделка', '300.00'], 1:['няня', '301.00'], 2:['уборщица','302.00'], 3:['работник на ферму','303.00'],	4:['штукатур','300.00'], 5:['маляр','305.00'], 6:['каменщик','306.00'], 7:['помощник столяра','307.00'], 8:['гипсокартонщик','12307.00'], 9:['разнорабочий','12307.00'], 10:['столяр','107.00'], 11:['работник на автомойку','107.00'], 12:['плиточник','133207.00'], 13:['домработница','7.50'], 14:['электромонтажник','133207.00'], 15:['работник на финишные работы','3256.00']};

				ul#professions-list
					each val in values
						li
							span(data-cost=val[1])=val[0]
				.professions__salary
					span.professions__salary__selected--prof
					| -  Зп/мес.: от $
					span.professions__salary__selected--sal

				.consult
					a(href="#").consult--left
						span подобрать лучшую вакансию
					.consult--right
						span или
						.svg
							svg: use(xlink:href="images/sprite.svg#header-arrow")
					a(href="#").consult--send-cv отправить своё резюме

				.notation__text
					span База вакансий ежедневно растет

				.employees
					.employees__junior
						img(src="images/employee_3.png" alt="")
					.employees__man
						img(src="images/employee_2.png" alt="")
					.employees__woman
						img(src="images/employee_1.png" alt="")
		// Section advantages
		.section.advantages
			.advantages__line__one
				.advantages__line__one--inner
			.advantages__line__two
				.advantages__line__two--inner
			.wrapper
				h2 Почему украинцы <br>
					span выбирают Ереван?

				.advantages__wrap
					.advantages__wrap__item
						.advantages__wrap__item--image.svg
							svg: use(xlink:href="images/sprite.svg#adv-img-1")
						p.advantages__wrap__item--text Возможность легализации <br> на длительный период

					.advantages__wrap__item
						.advantages__wrap__item--image.svg
							svg: use(xlink:href="images/sprite.svg#adv-img-2")
						p.advantages__wrap__item--text Комфортные и <br> доступные условия <br> проживания

					.advantages__wrap__item
						.advantages__wrap__item--image.svg
							svg: use(xlink:href="images/sprite.svg#adv-img-3")
						p.advantages__wrap__item--text Средний уровень <br> зарплаты в 15 раз <br> выше, чем в Украине

					.advantages__wrap__item
						.advantages__wrap__item--image.svg
							svg: use(xlink:href="images/sprite.svg#adv-img-4")
						p.advantages__wrap__item--text Возможность жить <br> и работать без знания <br> иностранных языков

					.advantages__wrap__item
						.advantages__wrap__item--image.svg
							svg: use(xlink:href="images/sprite.svg#adv-img-5")
						p.advantages__wrap__item--text Страна благоприятного <br> климата, туризма <br> и сыра

					.advantages__wrap__item
						.advantages__wrap__item--image.svg
							svg: use(xlink:href="images/sprite.svg#adv-img-6")
						p.advantages__wrap__item--text Сравнительно <br> небольшая стоимость <br> программы

		// Section conditions
		.section.conditions
			.wrapper
				h2 Какие документы нужны <br>
					span для выезда в Израиль?
				p.conditions__text От вас требуется только наличие загранпаспорта

				.conditions__wrap
					.conditions__wrap__left
							img(src="images/passport.png" alt="")

					.conditions__wrap__right
						.conditions__wrap__right--title В свою очередь мы предоставим:
						.conditions__wrap__right__item
							.conditions__wrap__right__item--image
								img(src="images/conditions-arrow.png" alt="")
							.conditions__wrap__right__item--text Решение всех нюансов в <br> процессе трудоустройства
						.conditions__wrap__right__item
							.conditions__wrap__right__item--image
								img(src="images/conditions-arrow.png" alt="")
							.conditions__wrap__right__item--text Официальное приглашение <br> с  израильской стороны
						.conditions__wrap__right__item
							.conditions__wrap__right__item--image
								img(src="images/conditions-arrow.png" alt="")
							.conditions__wrap__right__item--text Полная юридическая поддержк <br>а в оформлении легализации

				.consult
					a(href="#").consult--left
						span получить консультацию
					.consult--right
						span или
						.svg
							svg: use(xlink:href="images/sprite.svg#header-arrow")
					a(href="#").consult--send-cv отправить своё резюме

		// Section privilege
		.section.privilege
			.wrapper
				h2 Мы отправляем  <br>
					span только к проверенным <br> работодателям
				p.privilege__text Это гарантирует успешное трудоустройство <br> и соответствие зарплаты и условий труда, <br> заявленных в вакансии
				.privilege__wrap
					.privilege__wrap__item
						.privilege__wrap__item__image
							.privilege__wrap__item__image--inner.svg
								svg: use(xlink:href="images/sprite.svg#privilege-1")
						p.privilege__wrap__item--text За 2 года наработанна <br> база надежных <br> работодателей

					.privilege__wrap__item
						.privilege__wrap__item__image
							.privilege__wrap__item__image--inner.svg
								svg: use(xlink:href="images/sprite.svg#privilege-2")
						p.privilege__wrap__item--text Возможность подбора <br> вакансии согласно <br> вашим требованиям <br> и умениям

					.privilege__wrap__item
						.privilege__wrap__item__image
							.privilege__wrap__item__image--inner.svg
								svg: use(xlink:href="images/sprite.svg#privilege-3")
						p.privilege__wrap__item--text Работаем на прямую, <br> без посредников

					.privilege__wrap__item
						.privilege__wrap__item__image
							.privilege__wrap__item__image--inner.svg
								svg: use(xlink:href="images/sprite.svg#privilege-4")
						p.privilege__wrap__item--text Поддержка личного <br> менеджера 24/7

					.privilege__wrap__item
						.privilege__wrap__item__image
							.privilege__wrap__item__image--inner.svg
								svg: use(xlink:href="images/sprite.svg#privilege-5")
						p.privilege__wrap__item--text Встреча работника после <br> перелета, поселение <br> и сопровождение <br> в трудоустройстве

					.privilege__wrap__item
						.privilege__wrap__item__image
							.privilege__wrap__item__image--inner.svg
								svg: use(xlink:href="images/sprite.svg#privilege-6")
						p.privilege__wrap__item--text Подписание договора <br> еще в Украине – гарантия <br> трудоустройства

					.privilege__wrap__item
						.privilege__wrap__item__image
							.privilege__wrap__item__image--inner.svg
								svg: use(xlink:href="images/sprite.svg#privilege-7")
						p.privilege__wrap__item--text Возможность <br> перевода на более <br> выгодную вакансию

		// Section reviews
		.section.reviews
			.wrapper
				h2 Мы отправляем  <br>
					span только к проверенным <br> работодателям





		script(src='js/jquery-3.2.1.min.js', type='text/javascript')
